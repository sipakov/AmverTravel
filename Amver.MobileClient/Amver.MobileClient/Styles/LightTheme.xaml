<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Amver.MobileClient.Styles.LightTheme">
    <Color x:Key="background">#f7f9f8</Color>
    <Color x:Key="card">#4ba5c0</Color>
    <Color x:Key="text">#f7f9f8</Color>
    <Color x:Key="darkText">#4d5050</Color>
    <Color x:Key="barText">#f7f9f8</Color>
    <Color x:Key="button">#4ba5c0</Color>
    <Color x:Key="cardText">#1d223a</Color>
    
    <OnPlatform x:TypeArguments="x:String" x:Key="BoldFont">
        <On Platform="iOS" Value="Roboto-Bold"/>
        <On Platform="Android" Value="Roboto-Bold.ttf#Roboto Bold"/>
    </OnPlatform>
    <OnPlatform x:TypeArguments="x:String" x:Key="NormalFont">
        <On Platform="iOS" Value="Roboto-Regular" />
        <On Platform="Android" Value="Roboto-Regular.ttf#Roboto Regular"/>
    </OnPlatform>
    <OnPlatform x:TypeArguments="x:String" x:Key="LightFont">
        <On Platform="iOS" Value="Roboto-Light" />
        <On Platform="Android" Value="Roboto-Light.ttf#Roboto Light"/>
    </OnPlatform>
    <OnPlatform x:TypeArguments="x:String" x:Key="MediumFont">
        <On Platform="iOS" Value="Roboto-Medium" />
        <On Platform="Android" Value="Roboto-Medium.ttf#Roboto Medium"/>
    </OnPlatform>
</ResourceDictionary>
